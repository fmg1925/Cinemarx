<h1><%= t("login.title") %></h1>

<%= form_with model: User.new, url: login_path, data: { turbo: false }, local: true do |form| %>
    <p>
        <%= form.label t("login.username") %><br>
        <%= form.text_field :username %>
    </p>
    
    <p>
        <%= form.label t("login.password") %><br>
        <%= form.password_field :password %>
    </p>
    
    <p>
        <%= form.submit t("login.submit") %>
    </p>
<% end %>